<%= form_for :article , url: articles_path(@article) do |f| %>
  
  <% if @article.errors.any?  %>
  <p> <%= @article.errors.count   %> </p>
  <ul>
  <% @article.errors.full_messages.each do |value| %>
  	<li> <%= value %>  </li>
  	<% end %>
  </ul>
    <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>