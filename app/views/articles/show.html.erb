<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <%= link_to "Destroy Comment" ,[comment.article ,comment], method: :delete ,data: { confirm: "delete comment" }   %>

<% end %>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>



<%= link_to 'Edit' , edit_article_path(@article.id)  %>
<%= link_to 'List' , articles_path  %>